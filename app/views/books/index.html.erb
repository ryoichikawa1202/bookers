<h1>Books</h1>
<table>
  <thead>
    <th>title</th>
    <th>body</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "edit", edit_book_path(book.id) %></td>
      <td><%= link_to "delete", book_path(book.id), method: :delete, data: { confirm: "Are You Sure?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>

<%= form_with model: @book, url: '/books', method: :post, local: true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>